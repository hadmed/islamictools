<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_gravity="center_vertical|center_horizontal" >

<LinearLayout 
   android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center_vertical|center_horizontal" >

<LinearLayout 
   android:orientation="vertical"
	android:layout_width="90dip"
	android:layout_height="wrap_content"
	android:layout_gravity="top|right" >

   <TextView
   		android:id="@+id/txtsam"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:text="Continent"
        android:textStyle="bold"
        android:gravity="center_vertical|right"
    />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:text="Pays"
        android:textStyle="bold"
        android:gravity="center_vertical|right"
    />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:text="Ville"
        android:textStyle="bold"
        android:gravity="center_vertical|right"
			android:id="@+id/sammpx"
    />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:gravity="center_vertical|right"
        android:text="GMT"
        android:textStyle="bold"
    />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:gravity="center_vertical|right"
        android:text="dst"
        android:textStyle="bold"
    />
</LinearLayout>
<LinearLayout 
   android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center_vertical|center_horizontal" >

    <Spinner android:id="@+id/spinContinent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:prompt="@string/spinContinent"
    />

    <Spinner android:id="@+id/spinCountry"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:prompt="@string/spinCountry"
    />

    <Spinner android:id="@+id/spinCity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:prompt="@string/spinCity"
    />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_marginLeft="10dip"
        android:text="+1"
        android:id="@+id/gmtparam"
        android:gravity="center_vertical|left"
    />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_marginLeft="10dip"
        android:text="on"
        android:id="@+id/dstparam"
        android:gravity="center_vertical|left"
    />
</LinearLayout>
</LinearLayout>

<LinearLayout 
   android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center_vertical|center_horizontal" >

<LinearLayout 
   android:orientation="vertical"
	android:layout_width="90dip"
	android:layout_height="wrap_content"
	android:layout_gravity="center_vertical|center_horizontal" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:text="Latitude"
        android:gravity="center_vertical|right"
    />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:text="Longitude"
        android:gravity="center_vertical|right"
    />


</LinearLayout>
<LinearLayout 
   android:orientation="vertical"
	android:layout_width="120dip"
	android:layout_height="wrap_content"
	android:layout_gravity="center_vertical|center_horizontal" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_marginLeft="10dip"
        android:text="00°00'N"
        android:id="@+id/latparam"
        android:gravity="center_vertical|left"
    />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_marginLeft="10dip"
        android:text="00°00'E"
        android:id="@+id/lonparam"
        android:gravity="center_vertical|left"
    />
    
</LinearLayout>
<LinearLayout 
   android:orientation="vertical"
	android:layout_width="100dip"
	android:layout_height="60dip"
	android:layout_gravity="center_vertical|center_horizontal" >

 <Button android:id="@+id/set_pos_gps"
  	android:text="@string/set_pos_gps"
  	android:layout_width= "fill_parent"
  	android:layout_height="fill_parent"	
	android:gravity="center_vertical|center_horizontal"
 />
    
</LinearLayout>
</LinearLayout>
<LinearLayout 
   android:orientation="horizontal"
	android:layout_width="280dip"
	android:layout_height="wrap_content"
   android:layout_marginTop="10dip"
	android:layout_gravity="right"
	 >
 <Button android:id="@+id/param_reset"
  	android:text="init"
  	android:layout_width= "120dip"
  	android:layout_height="wrap_content"	
	android:gravity="center_horizontal|center_vertical"
 />
 <Button android:id="@+id/param_save"
  	android:text="@string/save"
  	android:layout_width= "120dip"
  	android:layout_height="wrap_content"	
	android:gravity="center_horizontal|center_vertical"
 />
 </LinearLayout>
</LinearLayout>
